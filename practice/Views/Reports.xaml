<Page x:Class="practice.Views.Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reports">
    <Grid>

        <TextBlock Text="Отчет по аренде машин в автопарке" HorizontalAlignment="Center" Foreground="DarkGray" FontSize="30" FontWeight="Medium" FontFamily="Montserrat" Margin="0,15,0,0"/>
        <Button Click="btn_report_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Создать отчет" Style="{StaticResource StyleTransparentButton}" Height="40" Width="235">
            <Button.Background>
                <ImageBrush ImageSource="\Resourses\rating.png" Stretch="Uniform" AlignmentX="Left"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
